package utils;
/**
 * 
 * 字符串工具类
 * @author ctyFL
 * @date 2020年4月11日
 * @version 1.0
 * 
 */
public class StringUtil {
	
	/**
	 * 过滤所有特殊字符
	 * @param str
	 * @return
	 */
	public String filterSpecialCharacterFromString(String str) {
		String returnStr = "";
		if(str != null && !"".equals(str)) {
			returnStr = str;
			String[] specials = { "\\","$","(",")","*","+",".","[", "]","?","^","{","}","|","'",
					"%","!","@","#","￥",",","。","，","&","-","_","~","=","<",">","/","`"};   
			for(int i=0; i<specials.length; i++) {
				if(returnStr.contains(specials[i])) {
					returnStr = returnStr.replace(specials[i], ""); 
				}
			}
		}
		return returnStr;
	}
	
	/**
	 * 将所有中文标点符号转换为英文状态
	 * @param str
	 * @return
	 */
	public String convertPunctuationToEnglishStatus(String str) {
		String returnStr = "";
		if(str != null && !"".equals(str)) {
			char[] c = str.toCharArray();
			for(int i=0; i<c.length; i++) {
				if(c[i] == 12288) {
					c[i]= (char)32; 
					continue;
				}
				if(c[i]>65280 && c[i]<65375) {
					c[i]=(char)(c[i]-65248);
				}
			}
			returnStr = new String(c);
		}
		return returnStr;
	}
	
}
